<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<ul>
    <li><%= link_to "Edit Article", edit_article_path(@article) %></li>
    <li><%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "That's pure poetry!!! Are you sure you want to burn it?"} %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>


